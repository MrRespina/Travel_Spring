<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0 // EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.travel.main.user.UserMapper">

	<insert id="insertSiteUser"
		parameterType="com.travel.main.user.SiteUser">
		insert into siteuser (username, password, email) 
			values (#{username}, #{password}, #{email});
	</insert>
	
	<select id="findByUsername" resultType="com.travel.main.user.SiteUser">
		select * from siteuser where username=#{username};
	</select>
	
	<delete id="deleteByUsername" parameterType="com.travel.main.user.SiteUser">
		DELETE FROM siteuser WHERE username = #{username};
	</delete>
	
	<update id="updateByUsername"
		parameterType="com.travel.main.user.SiteUser">
		UPDATE siteuser SET password = #{password}, email = #{email} 
			WHERE id = #{id};
	</update>
</mapper>